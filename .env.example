# ── Server ─────────────────────────────────────────────
PORT=3000
NODE_ENV=development

# ── WhatsApp Meta Cloud API ────────────────────────────
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_permanent_access_token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_custom_random_string
WHATSAPP_API_VERSION=v19.0

# ── OpenAI ─────────────────────────────────────────────
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o

# ── Google Drive ────────────────────────────────────────
GOOGLE_SERVICE_ACCOUNT_EMAIL=skm-agent@your-project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
GOOGLE_DRIVE_ROOT_FOLDER_ID=your_shared_drive_folder_id

# ── Dashboard Auth ──────────────────────────────────────
DASHBOARD_PASSWORD=choose_a_strong_password
SESSION_SECRET=another_long_random_string

# ── Database ────────────────────────────────────────────
DB_PATH=./data/skm.db
